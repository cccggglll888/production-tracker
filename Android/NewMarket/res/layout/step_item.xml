<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@color/light_gray_field"
    android:baselineAligned="false"
    android:gravity="top"
    android:orientation="horizontal"
    android:padding="0dp" >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="0dp"
        android:layout_weight="2.5"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/ivTextile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/textile_description"
            android:gravity="center_vertical"
            android:src="@drawable/step_completed_icon" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="4.5" >

        <TextView
            android:id="@+id/tvStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:text="@string/step_no_info" />

        <TextView
            android:id="@+id/tvTimeCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="@string/time_completed_no_info" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="3"
        android:padding="10dp" >

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button"
            android:contentDescription="@string/update_button_desc"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="@string/update_button_text" />
    </FrameLayout>

</LinearLayout>