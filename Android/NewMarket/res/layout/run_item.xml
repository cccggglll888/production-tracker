<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray_field"
    android:baselineAligned="false"
    android:gravity="top"
    android:orientation="horizontal"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/ivTextile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="2.5"
        android:contentDescription="@string/textile_description"
        android:padding="0dp"
        android:src="@drawable/no_textile_image" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="6.49"
        android:padding="25dp" >

        <TextView
            android:id="@+id/tvRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/run_no_info" />

        <TextView
            android:id="@+id/tvTextileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/textile_no_info" />

        <TextView
            android:id="@+id/tvStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/last_step_no_info" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/runs_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/run_continue_button_desc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/runs_continue_arrow" />
    </FrameLayout>

</LinearLayout>